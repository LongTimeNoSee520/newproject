  <select id="queryList" resultMap="UseWaterPlanAddWXVOModel">
    SELECT TOP
    ${pageSize} c.*
    FROM
    (
    SELECT
    row_number () OVER ( ORDER BY t1.unit_code asc ) AS rownumber,
    id,
    node_code,
    use_water_unit_id,
    unit_name,
    unit_code,
    water_meter_code,
    plan_year,
    cur_year_plan,
    first_quarter,
    second_quarter,
    third_quarter,
    fourth_quarter,
    first_water,
    second_water,
    audit_file_id,
    water_proof_file_id,
    other_file_id,
    CASE change_type
    WHEN 0 THEN '调整计划'
    WHEN 1 THEN '增加计划'
    ELSE '未知计划'
    END change_type_name,
    change_type as changeCode,
    change_quarter,
    create_time,
    confirmed,
    confirm_time,
    audit_time,
    audit_person,
    audit_person_id,
    audit_result,
    check_adjust_water,
    first_quarter_quota,
    second_quarter_quota,
    third_quarter_quota,
    fourth_quarter_quota,
    CASE
    t1.audit_status
    WHEN '0' THEN '未审核'
    WHEN '1' THEN '审核不通过'
    WHEN '2' THEN '审核通过'
    WHEN '3' THEN '未审核'
    WHEN '4' THEN '审核通过'
    ELSE '未审核'
    END audit_status,
    audit_status as auditStatusCode,
    CASE
    t1.executed
    WHEN '0' THEN '未执行'
    WHEN '1' THEN '已执行'
    ELSE '未执行'
    END executed,
    CASE
    t1.printed
    WHEN '0' THEN '未打印'
    WHEN '1' THEN '已打印'
    ELSE '已打印'
    END printed, --是否打印
    contacts,
    mobile_number
    FROM
    t_wx_use_water_plan_add t1
    WHERE
    t1.node_code = #{nodeCode}
    AND SUBSTRING ( t1.unit_code, 5, 2 ) IN (
      SELECT unit_type_code FROM t_w_use_water_unit_role
      WHERE person_id = #{userId}
      <if test="userType != null and userType != ''">
        and unit_type_code = #{userType}
      </if>
    )
    <if test="unitName != null and unitName != ''">
      and t1.unit_name like '%${unitName}%'
    </if>
    <if test="executed != null and executed != ''">
      and t1.executed = #{executed}
    </if>
    <if test="unitCode != null and unitCode != ''">
      and t1.unit_code like '%${unitCode}%'
    </if>
    <if test="status != null and status.size > 0">
      and t1.audit_status in (
      <foreach collection="status" item="status" separator=",">
        #{status}
      </foreach>
      )
    </if>
    ) c
    WHERE
    rownumber > (${pageSize}*(${currPage}-1))
    ORDER BY c.create_time desc
  </select>

