  <select id="queryList" resultMap="UseWaterPlanAddWXVOModel">
    SELECT TOP
    ${pageSize} c.*
    FROM
    (
    SELECT
    row_number () OVER ( ORDER BY t1.create_time DESC ) AS rownumber,
    id,
    node_code,
    use_water_unit_id,
    unit_name,
    unit_code,
    water_meter_code,
    plan_year,
    cur_year_plan,
    first_quarter,
    second_quarter,
    third_quarter,
    fourth_quarter,
    first_water,
    second_water,
    audit_file_id,
    water_proof_file_id,
    other_file_id,
    CASE change_type
    WHEN 0 THEN '调整计划'
    WHEN 1 THEN '增加计划'
    ELSE '未知计划'
    END change_type_name,
    change_type as changeCode,
    change_quarter,
    create_time,
    confirmed,
    confirm_time,
    audit_time,
    audit_person,
    audit_person_id,
    audit_result,
    check_adjust_water,
    first_quarter_quota,
    second_quarter_quota,
    third_quarter_quota,
    fourth_quarter_quota,
    CASE
    t1.audit_status
    WHEN '0' THEN '未执行'
    WHEN '1' THEN '已执行' ELSE '已执行'
    END audit_status,
    CASE
    t1.executed
    WHEN '0' THEN '未审核'
    WHEN '1' THEN '已审核'
    WHEN '2' THEN '已审核' ELSE '已审核'
    END executed,
    CASE
    t1.printed
    WHEN '0' THEN '未打印'
    WHEN '1' THEN '已打印' ELSE '已打印'
    END printed, --是否打印
    #{path} AS preViewRealPath
    FROM
    t_wx_use_water_plan_add t1
    INNER JOIN
    ( SELECT unit_type_code FROM t_w_use_water_unit_role WHERE
    person_id = #{userId} ) t2
    on SUBSTRING ( t1.unit_code, 5, 2 ) = t2.unit_type_code
    WHERE
    t1.node_code = #{nodeCode}

<!--    AND t1.id IN (
     SELECT
     id
     FROM
     t_wx_use_water_plan_add
     WHERE
     node_code = #{nodeCode}
     AND SUBSTRING ( unit_code, 5, 2 ) IN ( SELECT unit_type_code FROM t_w_use_water_unit_role WHERE
     person_id = #{userId} ))
-->
    <if test="unitName != null and unitName != ''">
      and t1.unit_name like '%${unitName}%'
    </if>
    <if test="userType != null and userType != ''">
      and SUBSTRING(t1.unit_code, 5, 2) like '%${userType}%'
    </if>
    <if test="executed != null and executed != ''">
      and t1.executed = #{executed}
    </if>
    <if test="auditStatus != null and auditStatus != ''">
      and t1.audit_status = #{auditStatus}
    </if>
    ) c
    WHERE
    rownumber > (${pageSize}*(${currPage}-1))
  </select>


  <select id="selectCount" resultType="int">
